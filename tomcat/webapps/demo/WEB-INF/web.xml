<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
    <servlet>
        <servlet-name>uploadfile</servlet-name>
        <jsp-file>/Upload.jsp</jsp-file>
        <multipart-config>
        <max-file-size>2147483646</max-file-size>
        <max-request-size>2147483646</max-request-size>
        <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
    </servlet>
    <servlet-mapping>
        <servlet-name>uploadfile</servlet-name>
        <url-pattern>/Upload.jsp</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>GetPDF</servlet-name>
        <jsp-file>/GetPDF.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPDF</servlet-name>
        <url-pattern>/GetPDF</url-pattern>
    </servlet-mapping>

     <servlet>
        <servlet-name>ListFiles</servlet-name>
        <jsp-file>/ListFiles.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListFiles</servlet-name>
        <url-pattern>/ListFiles</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Reflector</servlet-name>
        <jsp-file>/ReflectRequest.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>Reflector</servlet-name>
        <url-pattern>/reflector.html</url-pattern>
        <url-pattern>/reflector.md</url-pattern>
    </servlet-mapping> 

    <servlet>
        <servlet-name>uncachedRender</servlet-name>
        <jsp-file>/uncached_render.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>uncachedRender</servlet-name>
        <url-pattern>/uncached-render</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>uncachedRender</servlet-name>
        <url-pattern>/uncached-render.html</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>basic</servlet-name>
        <jsp-file>/basic.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>basic</servlet-name>
        <url-pattern>/basic</url-pattern>
        <url-pattern>/basic.html</url-pattern>
        <url-pattern>/index.html</url-pattern>
        <url-pattern></url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>DemoPolyfill</servlet-name>
        <multipart-config>
            <max-file-size>2147483646</max-file-size>
            <max-request-size>2147483646</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
        <servlet-class>com.pdftron.demoservlet.DemoPolyfillEndpoint</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>DemoPolyfill</servlet-name>
        <url-pattern>/DemoPolyfill</url-pattern>
        <url-pattern>/pf</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>basic_render</servlet-name>
        <jsp-file>/basic_render.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>basic_render</servlet-name>
        <url-pattern>/basic_render.html</url-pattern>
    </servlet-mapping>
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
        <init-param>
            <param-name>cors.allowed.origins</param-name>
            <param-value>*</param-value>
        </init-param>
        <init-param>
          <param-name>cors.allowed.headers</param-name>
          <param-value>Accept,Cache-Control,Accept-Encoding,Accept-Language,Access-Control-Request-Method,Access-Control-Request-Headers,Authorization,Connection,Content-Type,Host,Origin,Referer,Token-Id,User-Agent,X-Requested-With,Range,PDFTron-Custom,PDFTron-Internal</param-value>
        </init-param>
        <init-param>
            <param-name>cors.allowed.methods</param-name>
            <param-value>GET,POST,PUT,DELETE,OPTIONS,HEAD</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <session-config>
        <session-timeout>525600</session-timeout>
        <cookie-config>
            <name>PDFTRONSESSION</name>
            <max-age>31536000</max-age>
        </cookie-config>
    </session-config>
    
</web-app>
