<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                      http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
  version="4.0">
    <servlet>
        <servlet-name>GetPDF</servlet-name>
        <servlet-class>com.pdftron.blackboxservlet.GetPDF</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPDF</servlet-name>
        <url-pattern>/GetPDF</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>PreloadURL</servlet-name>
        <servlet-class>com.pdftron.blackboxservlet.PreloadURL</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>PreloadURL</servlet-name>
        <url-pattern>/PreloadURL</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>GetPerfInfo</servlet-name>
        <servlet-class>com.pdftron.blackboxservlet.GetPerfInfo</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>GetPerfInfo</servlet-name>
        <url-pattern>/GetPerfInfo</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>SetDebugConfig</servlet-name>
        <servlet-class>com.pdftron.blackboxservlet.SetDebugConfig</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SetDebugConfig</servlet-name>
        <url-pattern>/SetDebugConfig</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>CookieKiller</servlet-name>
        <servlet-class>com.pdftron.blackboxservlet.CookieKiller</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CookieKiller</servlet-name>
        <url-pattern>/CookieKiller</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CookieKiller</servlet-name>
        <url-pattern>/ck</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>HealthCheck</servlet-name>
        <servlet-class>com.pdftron.blackboxservlet.HealthCheck</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>HealthCheck</servlet-name>
        <url-pattern>/HealthCheck</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HealthCheck</servlet-name>
        <url-pattern>/health</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>BlackBoxPolyfill</servlet-name>
        <multipart-config>
            <max-file-size>2147483646</max-file-size>
            <max-request-size>2147483646</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
        <servlet-class>com.pdftron.blackboxservlet.BlackBoxPolyfillEndpoint</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>BlackBoxPolyfill</servlet-name>
        <url-pattern>/BlackBoxPolyfill</url-pattern>
        <url-pattern>/pf</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>AuxUpload</servlet-name>
        <multipart-config>
            <max-file-size>2147483646</max-file-size>
            <max-request-size>2147483646</max-request-size>
            <file-size-threshold>1048576</file-size-threshold>
        </multipart-config>
        <servlet-class>com.pdftron.blackboxservlet.AuxUpload</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AuxUpload</servlet-name>
        <url-pattern>/AuxUpload</url-pattern>
        <url-pattern>/aul</url-pattern>
    </servlet-mapping>
 
    <filter>
        <filter-name>CorsFilter</filter-name>
        <filter-class>org.apache.catalina.filters.CorsFilter</filter-class>
        <init-param>
            <param-name>cors.allowed.origins</param-name>
            <param-value>*</param-value>
        </init-param>
        <init-param>
          <param-name>cors.allowed.headers</param-name>
          <param-value>Accept,Cache-Control,Accept-Encoding,Accept-Language,Access-Control-Request-Method,Access-Control-Request-Headers,Authorization,Connection,Content-Type,Host,Origin,Referer,Token-Id,User-Agent,X-Requested-With,Range,PDFTron-Custom,PDFTron-Internal</param-value>
        </init-param>
        <init-param>
            <param-name>cors.allowed.methods</param-name>
            <param-value>GET,POST,PUT,DELETE,OPTIONS,HEAD</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CorsFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    
</web-app>
